<?xml version="1.0" encoding="UTF-8"?>

<client-config>
	<!-- eventually the config could use an element like this -->
	<client>
		<property name="host" value="127.0.0.1" />
		<property name="port" value="3307" />
		<property name="key" value="S0m3 Str0ng K3y!" />
	</client>

	<connection>
		<property name="dbms" value="mysql"/>
		<property name="host" value="127.0.0.1"/>
		<property name="schema" value="babel"/>
		<property name="user" value="root"/>
		<property name="password" value="admin"/>
		<property name="driverClassName" value="com.mysql.jdbc.Driver"/>
	</connection>

	<schema name="babel">
		<table name="users">
			<column name="id" type="INTEGER" encryption="none" pkOrdinal="0"/>
			<column name="first_name" type="VARCHAR(50)" encryption="ope"/>
			<column name="last_name" type="VARCHAR(50)" encryption="ope"/>
			<column name="ssn" type="VARCHAR(50)" encryption="aes"/>
			<column name="age" type="INTEGER" encryption="aes-salted"/>
			<column name="sex" type="VARCHAR(50)" encryption="aes-salted"/>
		</table>
		<table name="user_purchases">
			<column name="id" type="INTEGER" encryption="none" pkOrdinal="0"/>
			<column name="user_id" type="INTEGER" encryption="none"/>
			<column name="item_code" type="INTEGER" encryption="aes"/>
			<column name="amount" type="DOUBLE" encryption="aes"/>
		</table>
		<table name="items">
			<column name="item_code" type="INTEGER" encryption="aes"/>
			<column name="item_name" type="VARCHAR(50)" encryption="aes"/>
		</table>
	</schema>
</client-config>
